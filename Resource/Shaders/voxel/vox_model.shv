#version 430

// input
in vec3 a0;
in vec2 a1; // texcoord0
in vec3 a2; // normal

out vec4 ndcPos;
out vec2 texcoord0;
out vec3 worldPos;
out vec3 normal;

uniform mat4 mvp;
uniform mat4 localTransform;

void main()
{
	worldPos = (localTransform * vec4(a0, 1.0)).xyz;

	ndcPos = mvp * vec4(worldPos, 1.0);
	gl_Position = ndcPos;
	texcoord0 = a1;
	
	normal = mat3(localTransform) * a2;
}
